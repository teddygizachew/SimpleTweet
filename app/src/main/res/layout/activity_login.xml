<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#1DA1F2"
    tools:context=".LoginActivity" >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="71dp"
        android:layout_alignBottom="@+id/whatsHpn"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="102dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/whatsHpn"
        android:src="@drawable/ic_icons8_twitter" />

    <TextView
        android:id="@+id/whatsHpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="109dp"
        android:fontFamily="@font/roboto_bold"
        android:text="What's happening!"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="77dp" />

    <Button
        android:id="@+id/getStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whatsHpn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/roboto_bold"
        android:text="Get Started" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getStarted"
        android:layout_alignStart="@+id/getStarted"
        android:layout_marginStart="0dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/roboto_bold"
        android:onClick="loginToRest"
        android:text="@string/login_label" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getStarted"
        android:layout_alignEnd="@+id/getStarted"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/roboto_bold"
        android:text="Sign Up" />


</RelativeLayout>